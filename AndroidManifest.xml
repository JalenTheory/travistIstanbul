<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="travist.pack"
    android:versionCode="1"
    android:versionName="1.0" >
	<uses-sdk
        android:minSdkVersion="12"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:icon="@drawable/travist_icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <!-- MainActivity -->
        <activity
            android:name="fi.metropolia.lbs.travist.TravistIstanbulActivity"
            android:screenOrientation="portrait"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- OfflineMap -->
        <activity android:name="fi.metropolia.lbs.travist.offline_map.TestOfflineMapActivity"
            android:screenOrientation="portrait" />

        <!-- LeppÃ¤vaara -->
        <activity android:name="fi.metropolia.lbs.travist.offline_gps.TravistLeppavaaraActivity" 
            android:screenOrientation="portrait" />
        
        <!-- Routes testing Tapiola -->
        <activity android:name="fi.metropolia.lbs.travist.offline_map.TravistMapActivity" android:screenOrientation="portrait"/>

        <!-- <activity android:name="fi.metropolia.lbs.travist.offline_map.TestOfflineMapActivity" />  -->
        <activity android:name="fi.metropolia.lbs.travist.foursquare_api.FoursquareActivity" android:screenOrientation="portrait"/>
        <activity android:name="fi.metropolia.lbs.travist.todo.TodoActivity" android:screenOrientation="portrait"/>
        <activity android:name="fi.metropolia.lbs.travist.savedlist.SavedlistActivity" android:screenOrientation="portrait"/>
        <activity android:name="fi.metropolia.lbs.travist.emergency.EmergencyActivity" android:screenOrientation="portrait"/>
        <activity android:name="fi.metropolia.lbs.travist.exchange.ExchangeActivity" android:screenOrientation="portrait"/>
        <activity android:name="fi.metropolia.lbs.travist.register.RegisterActivity" android:screenOrientation="portrait"/>
        
        <!-- Content provider permission -->
        <!-- Name is the directory of the class, authority is the AUTHORITY defined in CP -->
        <provider
	    android:name="fi.metropolia.lbs.travist.database.LBSContentProvider"
	    android:authorities="fi.metropolia.lbs.travist.contentProvider" />
    </application>

</manifest>
