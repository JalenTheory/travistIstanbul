<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_weight="1" >
   
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:background="@drawable/username" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal" >

	        <EditText
	            android:id="@+id/dialog_login_name"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="Name"
	            android:textAppearance="?android:attr/textAppearanceMedium"
	            android:layout_gravity="center"
	            android:textColor="#000000"
	            android:singleLine="true"
	            android:background="@null" />
	       
        </LinearLayout>
        
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:background="@drawable/password" >
		<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal" >
	        <EditText
	            android:id="@+id/dialog_login_password"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="Password"
	            android:textAppearance="?android:attr/textAppearanceMedium"
	            android:layout_gravity="center"
	            android:textColor="#000000"
	            android:singleLine="true"
	            android:background="@null" />
        </LinearLayout>
        
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_gravity="center" >
        <LinearLayout
            android:id="@+id/dialog_login_log_in"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:orientation="horizontal"
	        android:layout_weight="1"
	        android:background="@drawable/login_dialog_button"
	        android:layout_gravity="center" >

	        <LinearLayout
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	            android:layout_weight="1"
	            android:gravity="center"
	            android:orientation="horizontal" >

	            <TextView
	                android:id="@+id/dialog_log_in_text"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="Log in"
	                android:textAppearance="?android:attr/textAppearanceMedium"
	                android:layout_gravity="center" />
			</LinearLayout>
	    </LinearLayout>
        
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1" >
        <LinearLayout
            android:id="@+id/dialog_login_cancel"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:orientation="horizontal"
	        android:layout_weight="1"
	        android:background="@drawable/login_dialog_button" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal" >

	            <TextView
	                android:id="@+id/dialog_cancel_text"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="Cancel"
	                android:textAppearance="?android:attr/textAppearanceMedium"
	                android:layout_gravity="center" />
			</LinearLayout>
	    </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_gravity="center" >
        <LinearLayout
            android:id="@+id/dialog_login_register"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:orientation="horizontal"
	        android:layout_weight="1"
	        android:background="@drawable/login_dialog_button"
	        android:layout_gravity="center" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal" >
                <TextView
	                android:id="@+id/dialog_register_text"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="Register"
	                android:textAppearance="?android:attr/textAppearanceMedium"
	                android:textStyle="bold|italic"/>
            </LinearLayout>

            

	    </LinearLayout>
        
    </LinearLayout>

    
</LinearLayout>