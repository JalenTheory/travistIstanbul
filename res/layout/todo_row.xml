<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    android:orientation="horizontal"
    android:layout_weight="1" >
    
    <LinearLayout
        
        android:id="@+id/todo_show_map"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_weight="3"
        android:orientation="horizontal"
        android:background="@drawable/todo_item_place" >
        <LinearLayout
		    android:id="@+id/todo_matchmake"
		    android:layout_width="wrap_content"
		    android:layout_height="30dp"
		    android:background="@drawable/todo_item_button"
		    android:orientation="horizontal"
		    android:layout_weight="2">
		    <ImageView
		        android:id="@+id/todo_item_match_icon"
		        android:layout_width="match_parent"
		        android:layout_height="match_parent"
		        android:layout_gravity="center"
		        android:layout_marginBottom="5dp"
		        android:src="@drawable/matchmake_icon">

		    </ImageView> 
		</LinearLayout>
        
        <TextView
	        android:id="@+id/todo_listname"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Place name"
	        android:layout_marginLeft="5dp"
	        android:layout_marginTop="3dp"
	        android:textAppearance="?android:attr/textAppearanceSmall" />
	</LinearLayout>
	<LinearLayout
	    android:id="@+id/todo_item_address"
	    android:layout_width="wrap_content"
	    android:layout_height="30dp"
	    android:layout_weight="3"
	    android:orientation="horizontal"
	    android:background="@drawable/todo_item_address" >
		<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="30dp"
		    android:layout_weight="2"
		    android:orientation="horizontal" >
			<TextView
			    android:id="@+id/todo_list_address"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_marginLeft="5dp"
			    android:layout_marginTop="3dp"
			    android:text="Address"
			    android:textAppearance="?android:attr/textAppearanceSmall" />
		</LinearLayout>
		<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="30dp"
		    android:layout_weight="4"
		    android:orientation="horizontal" >
		        <Button 
		        android:id="@+id/saveButton"
		        android:layout_width="match_parent"
		        android:layout_marginTop="3dp"
		        android:layout_height="30dp"
		        android:paddingBottom="5dp"
		        android:text="Save"
		        />
		</LinearLayout>
	</LinearLayout>

	<LinearLayout
	    android:id="@+id/todo_map"
	    android:layout_width="wrap_content"
	    android:layout_height="30dp"
	    android:background="@drawable/todo_item_button"
	    android:orientation="horizontal"
	    android:layout_weight="2" >
        
	    <ImageView
	        android:id="@+id/map_icon"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:src="@drawable/map_icon"
	        android:layout_marginBottom="5dp" />
        

	    
	</LinearLayout>
</LinearLayout>
